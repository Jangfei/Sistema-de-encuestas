div.person_photo {
    height: 210px;
    width: 100%;
    text-align: center;
}

div.person_photo ul {
    list-style-type: none;
}

div.person_photo ul li {
    text-align: center;
}

div.person_photo ul li a {
    padding: 10px 10px 20px 10px;
    background-color: #F9F9F9;
    display: inline-block;
    -moz-transform: rotate(2deg);
    -webkit-transform: rotate(2deg);
    -moz-box-shadow: -10px 10px 5px #999999;
    -webkit-box-shadow: -10px 10px 5px #999999;
    filter: progid:DXImageTransform.Microsoft.Matrix(sizingMethod='auto expand',
        M11=0.999390827019096, M12=-0.034899496702501, M21=0.034899496702501,
        M22=0.999390827019096);  /* y la transici√≥n */
    -webkit-transition: -webkit-transform .15s linear;
}


div.person_photo ul li a:hover{
    -moz-transform: none;
    -webkit-transform: none;
    filter:  progid:DXImageTransform.Microsoft.Matrix(sizingMethod='auto expand', M11=1, M12=0, M21=0, M22=1);
}


