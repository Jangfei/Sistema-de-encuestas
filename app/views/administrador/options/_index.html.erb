
<h4><%= "#{parent_object.descripcion} - opciones" %></h4>
    <ul class ="info">
        <li>
            <%= link_to "Crear opción", new_object_url(), :rel => :lightbox %>
        </li>
    </ul>

    <table class="azul">
        <thead>
            <tr>
                <th></th>
                <th> <%= t(:Id) %> </th>
                <th> "Opción" </th>
            </tr>
        </thead>
        <tbody id="<%= list_id-%>">
            <%= render :partial => "row", :collection => @collection %>
        </tbody>
        <tfoot id="<%= footer_id%>">
            <tr>
                <th colspan="3"> <%= render :partial => 'shared/pagination_counter', :locals => {:collection=> @collection} -%> </th>
            </tr>
        </tfoot>
    </table>


