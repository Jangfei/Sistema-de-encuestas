  <%= simple_form_for(@object, :url => collection_url, :remote => is_xhr?) do |f| %>
	<fieldset>
	<legend><%= t(:create_record, :record_name => t(object_name.downcase))%></legend>
	    <%= render :partial => "form", :locals => { :f => f } %>
